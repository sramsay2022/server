{
    "version": 8,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Matching Engine (Homebrew Clang)",
            "binaryDir": "build",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/opt/homebrew/opt/llvm/bin/clang",
                "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++",
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTING": "OFF"
            }
        },
        {
            "name": "tests",
            "displayName": "Tests (Apple Clang)",
            "binaryDir": "build_tests",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTING": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "tests",
            "configurePreset": "tests"
        }
    ],
    "testPresets": [
        {
            "name": "tests",
            "configurePreset": "tests",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}
